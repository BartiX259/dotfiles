@use 'colors' as *;

$border-color:  $primary;
$bg-color:      $on-primary;
$fg-color:      $tertiary;
$bg-slider:     $surface-container;

/* Global styles */
* {
  all: unset;
  font-family: "{{ .font_family }}", monospace;
  font-size: {{ add .font_size 1 }}px;
}

/* Base popup styles */
.popup-box {
  background-color: $bg-color;
  border-radius: 10px;
  padding: 10px;
  border: 2px solid $border-color;
}

.popup-label {
  color: $fg-color;
  font-weight: bold;
}

/* Slider Styling */
scale trough {
  all: unset;
  background-color: $bg-slider;
  border-radius: {{ .font_size }}px;
  min-height: {{ sub .font_size 5 }}px;
  min-width: {{ mul .font_size 10 }}px;
}

scale trough highlight {
  background-color: $fg-color;
  border-radius: {{ .font_size }}px 0px 0px {{ .font_size }}px;
}
scale slider {
  all: unset;
  background-color: $fg-color;
  border-radius: 2px;
  min-height: {{ add .font_size 2 }}px;
  min-width: {{ div .font_size 3 }}px;
  margin: -2px;
  margin-right: 3px;
}

/* Icon Font Definitions */
.icon-label {
  font-family: "Material Symbols Rounded";
  font-size: {{ add .font_size 12 }}px;
  color: $fg-color;
}

/* Helper for empty window */
.empty {
  background: transparent;
}
