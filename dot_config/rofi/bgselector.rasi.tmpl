@theme "/dev/null"

configuration {
    show-icons: true;
    hover-select: true;
    me-select-entry: "";
    me-accept-entry: "MousePrimary";
}

@import "colors.rasi"

* {
    background-color: transparent;
    font: "{{ .font_family }}, Regular {{ sub .font_size 2 }}";
}

window {
    height: 590px;
}

// Main Box
mainbox {
    children: [listview, message];
    background-color: @surface;
    padding: 10px 0px;
    border-radius: 20px;
}

// Listview
listview {
    padding: 0px 10px;
    spacing: 10px;
    columns: 7;
    flow: horizontal;
    children: [element-icon];
}

element {
    border-radius: 10px;
}
element.selected {
    border: 2px;
    border-color: @primary;
}
element-icon {
    size: 229px 540px;
    horizontal-align: 0;
}

message {
    background-color: inherit; 
    margin: 0px 10px;
    border-radius: 0px 0px 10px 10px;
}
textbox {
    background-color: transparent;
    text-color: @on-surface;
    horizontal-align: 0.5; // Center the text
    vertical-align: 0.5;
}
