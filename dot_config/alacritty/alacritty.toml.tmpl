[general]
import = ["~/.config/alacritty/colors.toml"]

[colors]
draw_bold_text_with_bright_colors = true

[font]
size = {{ .font_size }}

[font.bold]
family = "{{ .font_family }}"
style = "Bold"

[font.bold_italic]
family = "{{ .font_family }}"
style = "BoldItalic"

[font.italic]
family = "{{ .font_family }}"
style = "MediumItalic"

[font.normal]
family = "{{ .font_family }}"
style = "SemiBold"

[scrolling]
history = 10000
multiplier = 3

[selection]
save_to_clipboard = false

[terminal.shell]
program = "{{ .shell }}"

[window]
dynamic_title = false
opacity = 0.92
title = "Alacritty"
dimensions = { columns = 40, lines = 16 }

[window.class]
general = "Alacritty"
instance = "Alacritty"

[window.padding]
x = 5
y = 5

